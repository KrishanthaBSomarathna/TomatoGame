<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebb"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/registerButton"
            android:layout_width="165dp"
            android:layout_height="91dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/registor"
            android:elevation="8dp"
            android:outlineAmbientShadowColor="#3D000000"
            android:outlineSpotShadowColor="#1F000000" />

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="175dp"
            android:layout_height="91dp"
            android:layout_margin="10dp"
            android:background="@drawable/play"
            android:elevation="8dp"
            android:outlineAmbientShadowColor="#3D000000"
            android:outlineSpotShadowColor="#1F000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/button"
            android:layout_width="65dp"
            android:layout_marginTop="5dp"
            android:layout_height="65dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@drawable/scorebtn" />

        <Button
            android:id="@+id/help"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@drawable/help" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
